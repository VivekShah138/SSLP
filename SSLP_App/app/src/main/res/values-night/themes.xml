<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SSLP" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/Grey800</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/Blue700</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/Grey800</item>
        <item name="colorError">@color/Red700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>


    </style>

    <style name="Theme.SSLP" parent="Base.Theme.SSLP" />

    <!--    Theme for calender picker for selection of DateOfBirth-->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/Grey800</item> <!-- Cancel and Ok button in date picker -->
        <item name="colorSurface">@color/white</item> <!-- Calender Bg color -->
        <item name="colorSecondary">@color/black</item>  <!-- Header Bg color -->
    </style>

</resources>