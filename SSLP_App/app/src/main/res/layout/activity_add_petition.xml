<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPetition">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/topAppBarAddPetitionPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:navigationIcon="@drawable/login_page_arrow_left_back_button"
                app:title="Petition"
                app:titleTextColor="?attr/colorOnPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextHomePagePetitionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the title of petition"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:minLines="3"
                        android:maxLines="10"
                        android:background="@drawable/add_item_edit_text_bg"
                        android:gravity="start"
                        android:layout_marginTop="20dp"
                        android:textColor="?attr/colorOnBackground"
                        android:textStyle="bold"/>

                </ScrollView>



                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextHomePagePetitionDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter the details of petition"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:minLines="10"
                        android:maxLines="10"
                        android:background="@drawable/add_item_edit_text_bg"
                        android:gravity="start"
                        android:isScrollContainer="true"
                        android:scrollbars="vertical"
                        android:textColor="?attr/colorOnBackground"/>

                </ScrollView>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/buttonAddPetition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_marginTop="20dp"/>



            </LinearLayout>

        </LinearLayout>




    </ScrollView>



</LinearLayout>